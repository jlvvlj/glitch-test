@require '../constants'

.segmentedButtons  
  button
    margin: 0
    display: inline
    &:first-child
      border-top-right-radius: 0
      border-bottom-right-radius: 0
    &:last-child
      border-left: 0
      border-top-left-radius: 0
      border-bottom-left-radius: 0
    &:not(:first-child):not(:last-child)
      border-radius: 0px
      border-left: 0
    &:hover, &:focus
      background-color: secondary-background
    &:focus
      outline: none
    &.active
      background-color: secondary-background-active
    &.active:focus
      background-color: secondar-background-hover
    &.active:focus
      outline: none
