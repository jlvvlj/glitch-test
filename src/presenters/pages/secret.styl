.secretPage
  position: relative
  background: url('https://cdn.glitch.com/02863ac1-a499-4a41-ac9c-41792950000f%2Fsecret.png?1535485687935'), black
  background-position: center
  background-repeat: no-repeat
  height: 768px
  margin: 0
